@page
@model RegisterModel
@{
    ViewData["Method"] = "Sign Up";
    Layout = "_AuthLayout";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <header class="card-header">
                <a asp-page="./Login" class="float-right btn btn-outline-primary mt-1">Sign In</a>
                <h4 class="card-title mt-2">
                    <img src="~/images/bug.png" alt=""> | @ViewData["Method"]
                </h4>
            </header>
            <article class="card-body">

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Create a new account.</h4>
                    <hr/>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Login"></label>
                        <input asp-for="Input.Login" class="form-control"/>
                        <span asp-validation-for="Input.Login" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control"/>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control"/>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control"/>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">@ViewData["Method"]</button>
                </form>
            </article>
            <div class="border-top card-body text-center">
                Have an account?
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Sign In</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}