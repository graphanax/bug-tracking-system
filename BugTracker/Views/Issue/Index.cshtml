@model List<BugTracker.Models.ViewModels.IssueListViewModel>

@{
    ViewData["Title"] = "Issues";
}

<div>
    <div>
        <input placeholder="Search or filter results..." aria-label="Search or filter results...">
    </div>

    <button aria-label="Search" type="button">

        <use href="~/images/search.png"></use>

    </button>
</div>

<table class="table table-responsive-xl">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Author</th>
        <th>Assignee</th>
        <th>Priority</th>
        <th>Status</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var issue in Model)
    {
        <tr class="alert" role="alert">
            <td>
                <span>#@issue.Id</span>
            </td>
            <td>
                <div class="email">
                    <span><a href="@Url.Action("DetailIssue", "Issue", new { issueId = issue.Id })">@issue.Title</a></span>
                    <span>updated @issue.Updated</span>
                </div>
            </td>
            <td>
                <div class="email">
                    <span>@issue.CreatedBy</span>
                    <span>created @issue.Created</span>
                </div>
            </td>
            <td>
                <div>
                    @if (issue.AssignedTo == null)
                    {
                        <span>—</span>
                    }
                    else
                    {
                        <span>@issue.AssignedTo</span>
                    }
                </div>
            </td>
            <td class="status">
                @switch (issue.Priority)
                {
                    case "ASAP":
                    case "High":
                        <span class="high">@issue.Priority</span>
                        break;
                    case "Normal":
                        <span class="normal">@issue.Priority</span>
                        break;
                    case "Low":
                        <span class="low">@issue.Priority</span>
                        break;
                }
            </td>
            <td class="status">
                @switch (issue.Status)
                {
                    case "Closed":
                        <span class="low">@issue.Status</span>
                        break;
                    case "Opened":
                        <span class="high">@issue.Status</span>
                        break;
                }
            </td>
        </tr>
    }
    </tbody>
</table>